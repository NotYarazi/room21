# Room21 Server Configuration
# Copy this file to .env and modify as needed

# Server Protocol Configuration
# Set to 'true' for HTTPS, 'false' for HTTP
USE_HTTPS=false

# Server Port
PORT=3000

# Session Secret (change this in production!)
SESSION_SECRET=room21-secret-key-change-in-production

# Environment
NODE_ENV=development

# HTTPS Settings (only needed when USE_HTTPS=true)
# Certificate files should be placed in src/public/assets/cert/
# - cert.pem (SSL certificate)
# - key.pem (Private key)

# Development Examples:
# USE_HTTPS=false   # HTTP server on http://localhost:3000
# USE_HTTPS=true    # HTTPS server on https://localhost:3000

# Production Example:
# USE_HTTPS=true
# NODE_ENV=production
# SESSION_SECRET=your-super-secure-secret-key-here
# PORT=443
